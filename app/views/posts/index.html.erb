<div class="title">
    <h1 class="title">Home</h1>
</div>
<% @posts.each do |post| %>
    <div class="card md-12 mb-3">
        <div class="card-body">
            <a href="<%= post_path(post) %>"><h5 class="card-title"><%= post.title %></h5></a>
            <p class="card-text"><%= post.user.name %></p>
            <p class="card-text"><%= post.updated_at %></p>
            <h3 class="card-text"><%= post.description %></h3>
        </div>
    </div>
<% end %>