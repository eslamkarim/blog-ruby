<%= form_tag signup_path do %>
<div class="title">
<h1>Sign Up</h1>
</div>

    <div class="form-group">
        <%= text_field_tag :name, nil, placeholder: 'Name..',class: "form-control" %>
    </div>
    <div class="form-group">
        <%= password_field_tag :password, nil, placeholder: 'Password..',class: "form-control" %>
    </div>
    <div class="form-group">
        <%= password_field_tag :password_confirmation, nil, placeholder: 'Confirm Password..',class: "form-control" %>
    </div>
    <%= submit_tag "Register", class: "btn btn-success btn-block" %>
<% end %>
