<%= form_tag signin_path do %>
<div class="title">
<h1>Sign In</h1>
</div>

    <div class="form-group">
        <%= text_field_tag :name, nil, placeholder: 'Name..',class: "form-control" %>
    </div>
    <div class="form-group">
        <%= password_field_tag :password, nil, placeholder: 'Password..',class: "form-control" %>
    </div>
    <%= submit_tag "Log In", class: "btn btn-success btn-block" %>
<% end %>